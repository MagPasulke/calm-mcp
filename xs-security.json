{
  "xsappname": "mcp-server-calm",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.read",
      "description": "Read access to CALM services"
    }
  ],
  "role-templates": [
    {
      "name": "CALMViewer",
      "description": "Read-only access to CALM server",
      "scope-references": [
        "$XSAPPNAME.read"
      ]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [ 
      "https://*.cfapps.*.hana.ondemand.com/**",
      "http://localhost:33418/**",
      "https://vscode.dev/redirect"
    ],
    "grant-types": [
      "authorization_code",
      "refresh_token",
      "client_credentials"
    ],
    "token-validity": 3600,
    "refresh-token-validity": 86400
  }
}
